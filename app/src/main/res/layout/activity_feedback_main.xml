<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradientbackground">

    <EditText
        android:id="@+id/idEdtCourseTracks"
        android:layout_width="10dp"
        android:layout_height="13dp"
        android:minHeight="48dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/idEdtCourseName"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="37dp"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/ic_baseline_email_24"
        android:drawablePadding="12dp"
        android:drawableTint="#2196F3"
        android:hint="Enter Email Address"
        android:minHeight="48dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/idEdtCourseDuration"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/ic_baseline_mode_comment_24"
        android:drawablePadding="12dp"
        android:drawableTint="#2196F3"
        android:hint="Enter Feedback Title"
        android:minHeight="48dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:shadowColor="#595959"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idEdtCourseName" />

    <Button
        android:id="@+id/idBtnAddCourse"
        android:layout_width="318dp"
        android:layout_height="55dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="52dp"
        android:fontFamily="@font/cabin"
        android:text="Submit Feedback"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idEdtCourseDescription" />

    <EditText
        android:id="@+id/idEdtCourseDescription"
        android:layout_width="380dp"
        android:layout_height="191dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_input"
        android:gravity="top"
        android:hint="Enter Feedback"
        android:minHeight="48dp"
        android:paddingStart="12dp"
        android:paddingTop="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idEdtCourseDuration" />

    <Button
        android:id="@+id/idBtnReadCourse"
        android:layout_width="319dp"
        android:layout_height="55dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/cabin"
        android:text="Read Feedback History"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idBtnAddCourse" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="284dp"
        android:layout_height="88dp"
        android:layout_marginStart="63dp"
        android:layout_marginTop="40dp"
        android:elevation="12dp"
        android:fontFamily="@font/fugaz_one"
        android:shadowColor="#000000"
        android:shadowDx="10"
        android:shadowDy="10"
        android:shadowRadius="20"
        android:text="Feedback "
        android:textColor="#FFFFFF"
        android:textColorHighlight="#000000"
        android:textColorHint="#000000"
        android:textSize="55sp"
        android:typeface="sans"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>